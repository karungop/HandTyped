{
  "manifest_version": 3,
  "name": "HandKey",
  "version": "1.0",
  "description": "Control web apps using hand gestures mapped to keyboard keys.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["contentScript.js"]
  }],
  "web_accessible_resources": [
  {
    "resources": [
      "lib/mediapipe/hands.js",
      "lib/mediapipe/camera_utils.js",
      "lib/mediapipe/*.wasm",
      "lib/mediapipe/*.data"
    ],
    "matches": ["<all_urls>"]
  }
],
  "icons": {
    "16": "icons/icon16.png"
  },
  "content_security_policy": {
  "extension_pages": "script-src 'self'; object-src 'self';"
}
}
